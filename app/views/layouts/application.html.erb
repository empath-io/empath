    <!-- Left panel : Navigation area -->
    <!-- Note: This width of the aside area can be adjusted through LESS variables -->
    <aside id="left-panel">

      <!-- User info -->
      <div class="login-info">
        <span> <!-- User image size is adjusted inside CSS, it should stay as it --> 
          
          <a href="javascript:void(0);" id="show-shortcut">
            <%= image_tag "/assets/img/avatars/sunny.png", alt:"me", class:"online" %> 
            <span>
              john.doe 
            </span>
            <i class="fa fa-angle-down"></i>
          </a> 
          
        </span>
      </div>
      <!-- end user info -->

      <!-- LEFT NAV MENU -->
      <%= if !current_user
            render partial: '/shared/leftnav_god' 
          elsif current_user && current_user.is_god?
            render partial:'/shared/leftnav_god'
          elsif current_user && current_user.is_admin? 
            render partial:'/shared/leftnav_admin'
          elsif current_user && current_user.is_employee? 
            render partial:'/shared/leftnav_employee'
          elsif current_user && current_user.is_concierge? 
            render partial:'/shared/leftnav_concierge'
          end
      %>



    <!-- MAIN PANEL -->
    <div id="main" role="main">

      <!-- RIBBON -->
      <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
          <% if @breadcrumb
                @breadcrumb.each do |b| %>
                  <% if b[1] != '' %>
                    <li><%= link_to b[0],b[1] %></li>
                  <% else %>
                    <li><%= b[0] %></li>
                  <% end %>
                <% end %>
          <% end %>
          <!-- <li><%= link_to 'Home',experiments_path %></li><li>Dashboard</li>  -->
        </ol>
        <!-- end breadcrumb -->

        <!-- You can also add more buttons to the
        ribbon for further usability

        Example below:

        <span class="ribbon-button-alignment pull-right">
        <span id="search" class="btn btn-ribbon hidden-xs" data-title="search"><i class="fa-grid"></i> Change Grid</span>
        <span id="add" class="btn btn-ribbon hidden-xs" data-title="add"><i class="fa-plus"></i> Add</span>
        <span id="search" class="btn btn-ribbon" data-title="search"><i class="fa-search"></i> <span class="hidden-mobile">Search</span></span>
        </span> -->

      </div>
      <!-- END RIBBON -->

      <!-- MAIN CONTENT -->
      <div id="content">

        <div class="row">
          <!-- <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8"> -->
          <div class="col-xs-12">

            <% if flash[:notice] %>
              <div class="alert alert-info fade in">
                 <button class="close" data-dismiss="alert">×</button>
                 <strong>Notice:</strong> <%= flash[:notice] %>
              </div>
              
            <% elsif flash[:error] %>
              <div class="alert alert-danger fade in">
                 <button class="close" data-dismiss="alert">×</button>
                 <strong>Error:</strong> <%= flash[:error] %>
              </div>

            <% elsif flash[:success] %>
              <div class="alert alert-success fade in">
                 <button class="close" data-dismiss="alert">×</button>
                 <strong>Success!</strong> <%= flash[:success] %>
              </div>              

            <% end %>            

            <%= yield %>
          </div>
        </div><!-- end .row -->

      </div>
      <!-- END MAIN CONTENT -->

    </div>
    <!-- END MAIN PANEL -->

    <!-- SHORTCUT AREA : With large tiles (activated via clicking user name tag)
    Note: These tiles are completely responsive,
    you can add as many as you like
