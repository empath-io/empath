      <label for="inputPassword3" class="col-sm-2 control-label">Repeat every</label>
      <div class="col-sm-10">
        <%= select_tag "trigger[interval]", options_for_select((1..31).to_a.collect {|i| [i,i*24*60]}) %> weeks
