  <div id="repeat-daily-form" class="repeat-forms" >
    
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        Occurs the day subject is signed up at this time:
      </div>
    </div>  
    <div class="form-group date-choose">
      <label for="date" class="col-sm-2 control-label">Time</label>
      <div class="col-sm-2">
        <input type="text" class="form-control time inc-dec-num" id="hour" placeholder="hr" name="trigger[hour]" value="<%= @trigger.hour %>">
      </div>
      <div class="col-sm-3">
        <input type="text" class="form-control time inc-dec-num" id="minute" placeholder="min" name="trigger[minute]" value="<%= @trigger.minute %>">
      </div>
      <div class="col-sm-2">
        <select class="form-control" name="trigger[am]">
          <option value="1" <%= 'selected' if trigger.am %>>am</option>
          <option value="0" <%= 'selected' if !trigger.am %>>pm</option>
        </select>
      </div>     
      <div class="col-sm-2">
        <%= select_tag "trigger[trigger_time_zone]", options_for_select(Trigger::TIMEZONES.collect{|key,val| [val,key]},trigger.trigger_time_zone),{:class=>'form-control'} %>
      </div>        
    </div>
  </div><!-- end #repeat-daily-form-->   